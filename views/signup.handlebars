<div class="row">
    <div class="col s3"></div>
    <form id="signup-form" class="col s6">
        <h3>Sign up</h3>
        <div class="row">
            <div class="input-field col s12">
                <input id="email" type="email" class="validate">
                <label for="email">Please enter your email</label>
                <span class="helper-text" data-error="Please enter a valid email address"
                    data-success="Cool, you'll use this email to login">Your
                    email address will be used when
                    you login</span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="password" type="password" class="validate">
                <label for="password">Create a password</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="passwordconfirm" type="password" class="validate">
                <label for="passwordconfirm">Please re-enter your password</label>
            </div>
        </div>
        <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            </button>
        </div>
        <div class="row">
            <div class="col s12">
                <p>or, <a href="/login">click here</a> to login..</p>
            </div>
        </div>
    </form>
    <div class="col s3"></div>
</div>