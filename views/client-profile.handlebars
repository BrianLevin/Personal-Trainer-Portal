<div class="container">
    <!-- Page Content goes here -->
    <!-- Client's Profile -->
    <div class="row s6 align-center">
        <div class="col s10 push-s1">
            <div class="card horizontal ">
                <div class="card-image">
                    <img src={{client_photo}}>
                </div>
                <div class="card-stacked">
                    <div class="card-content ">
                        <h4 id="name">{{first_name}} {{last_name}}</h4>
                        <p id="plan_type">Plan Type: {{plan_type}}</p>
                        <p id="age">Age: {{age}}</p>
                        <p id="gender">Gender: {{gender}}</p>
                        <p id="weight">Weight: {{user_weight}}</p>
                        <p id="height">Height: {{user_height}}</p>
                        <p id="phone">Phone: {{phone_number}}</p>
                    </div>
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-widthz">
                            <li class="tab"><a href="#goals">Goals</a></li>
                            <li class="tab"><a href="#injuries">Injuries</a></li>
                            <li class="tab"><a href="#medical_conditions">Medical Conditions</a></li>
                            <li class="tab"><a href="#diet">Diet</a></li>
                            <li class="tab"><a href="#history">History</a></li>
                        </ul>
                    </div>
                    <div class="card-content grey lighten-4">
                        <div id="goals"> {{goals}}</div>
                        <div id="injuries"> {{injuries}}</div>
                        <div id="medical_conditions"> {{medical_conditions}}</div>
                        <div id="diet"> {{diet}}</div>
                        <div id="history"> {{history}}</div>

                    </div>
                    <div class="card-action">
                        <a id="add-note" href="#">Add Note</a>
                    </div>
                    <div class="card-action">
                        <a id="email" href="#">Contact/Email</a>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <!-- Add Client Note & Submit -->
    <div class="row">
        <div class="divider"></div>
        <div class="section">
            <h5>Add Note</h5>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">mode_edit</i>
                            <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
                            <label for="icon_prefix2">Add Client Note Here </label>
                        </div>

                    </div>
                </form>
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
        <div class="divider"></div>
    </div>

    <!-- All Saved Notes go to Cards here. -->
    <div class="row">

        <div class="section">
            <h5>Notes</h5>
            <div class="col s4 ">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Date of Session 06/06/20 </span>
                        <p>I am a very simple card. I am where you will store session notes.
                            {{session_notes}}</p>
                    </div>
                    <div class="card-action">
                        <a href="#">Edit Note</a>
                        <a href="#">Delete Note</a>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
