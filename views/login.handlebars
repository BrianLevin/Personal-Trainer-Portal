<div class="row">
    <div class="col s4">
    </div>
    <form id="login" class="col s4">
        <h3>Login</h3>
        <div class="row">
            <div class="input-field col s12">
                <input id="email-input" type="text" class="validate">
                <label class="active" for="login">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="password" type="password" class="validate">
                <label class="active" for="login">Password</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>

        <div class="row">
            <div class="col s12">
                <p>or, <a href="/sign-up">click here</a> to sign up..</p>
            </div>
        </div>
    </form>
    <div class="col s4">
    </div>
</div>